<div class="max-w-2xl mx-auto">
  <div class="mb-6 flex justify-between items-center">
    <h1 class="text-2xl font-bold text-gray-900">配達記録詳細</h1>
    <div class="space-x-2">
      <%= link_to "編集", edit_delivery_path(@delivery), 
          class: "bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition duration-200" %>
      <%= link_to "削除", @delivery, method: :delete, 
          data: { confirm: "削除してもよろしいですか？" }, 
          class: "bg-red-600 text-white px-4 py-2 rounded-lg hover:bg-red-700 transition duration-200" %>
    </div>
  </div>

  <div class="bg-white rounded-lg shadow p-6">
    <dl class="grid grid-cols-1 gap-6 sm:grid-cols-2">
      <div>
        <dt class="text-sm font-medium text-gray-500">配達日時</dt>
        <dd class="mt-1 text-sm text-gray-900">
          <%= @delivery.delivered_at.strftime("%Y年%m月%d日 %H:%M") %>
        </dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">地区</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @delivery.area.name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">店舗名</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @delivery.store_name %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">料金</dt>
        <dd class="mt-1 text-sm text-gray-900">¥<%= number_with_delimiter(@delivery.price_yen) %></dd>
      </div>
      <div>
        <dt class="text-sm font-medium text-gray-500">配達時間</dt>
        <dd class="mt-1 text-sm text-gray-900"><%= @delivery.duration_min %>分</dd>
      </div>
      <% if @delivery.memo.present? %>
        <div class="sm:col-span-2">
          <dt class="text-sm font-medium text-gray-500">メモ</dt>
          <dd class="mt-1 text-sm text-gray-900 whitespace-pre-wrap"><%= @delivery.memo %></dd>
        </div>
      <% end %>
    </dl>
  </div>

  <div class="mt-6">
    <%= link_to "一覧に戻る", deliveries_path, 
        class: "text-blue-600 hover:text-blue-900" %>
  </div>
</div>
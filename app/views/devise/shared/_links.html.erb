<%- if controller_name != 'sessions' %>
  <%= link_to "ログイン", new_session_path(resource_name), 
      class: "text-blue-600 hover:text-blue-900 text-sm" %><br />
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <%= link_to "新規登録", new_registration_path(resource_name), 
      class: "text-blue-600 hover:text-blue-900 text-sm" %><br />
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <%= link_to "パスワードを忘れた場合", new_password_path(resource_name), 
      class: "text-blue-600 hover:text-blue-900 text-sm" %><br />
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "確認メールが届かない場合", new_confirmation_path(resource_name), 
      class: "text-blue-600 hover:text-blue-900 text-sm" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "アカウントロック解除", new_unlock_path(resource_name), 
      class: "text-blue-600 hover:text-blue-900 text-sm" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= button_to "#{OmniAuth::Utils.camelize(provider)}でログイン", omniauth_authorize_path(resource_name, provider), 
        data: { turbo: false }, 
        class: "w-full bg-gray-200 text-gray-800 py-2 px-4 rounded-lg hover:bg-gray-300 transition duration-200 text-sm" %><br />
  <% end %>
<% end %>
